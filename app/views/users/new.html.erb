<div class="action">
		<h1 class ="h">SIGN UP<h1>
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages'%><br>
		<div class="field" >
		<%= f.label :name %><br>
		<%= f.text_field :name  %>
		</div>
		<div class="field">
		<%= f.label :email %><br>
		<%= f.email_field :email %>
		</div>
		<div class="field">
		<%= f.label :password %><br>
		<%= f.password_field :password %>
		</div>
		<div class="field">
		<%= f.label :password_confirmation,"Confirmation" %><br>
		<%= f.password_field :password_confirmation %><br><br>
		<%= f.submit "Sign Up!" %><br>
		</div> 


</div> 

<% end %>

