<div class="action">
	<h1 class="h">Sign In</h1>
			<%= form_for(:session ,:url => sessions_path) do |f| %>
	<div class="field" >
			<%= f.label :email %><br>
			<%= f.text_field :email  %>
	</div>
	<div class="field" >
			<%= f.label :password %><br>
			<%= f.password_field :password  %><br><br>
			<%= f.submit "Sign In!" %><br>
	</div>
			<% end  %>

	<p class="p"> New User? <%= link_to "Sign Up Now!",signup_path%></p>	
</div>